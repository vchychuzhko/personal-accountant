{% extends '@!EasyAdmin/layout.html.twig' %}

{% block head_metas %}
    {{ parent() }}
    <meta name="theme-color" content="#ffffff">
{% endblock %}

{% block head_favicon %}
    <link rel="icon" href="{{ asset('favicon.ico') }}" sizes="48x48">
    <link rel="icon" href="{{ asset('favicon.svg') }}" sizes="any" type="image/svg+xml">
    <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon-180x180.png') }}">
    <link rel="manifest" href="{{ asset('manifest.webmanifest') }}">
{% endblock %}

{% block wrapper_wrapper %}
    <twig:ea:Alert variant="primary" withDismissButton="0">
        {{ 'This is a demo website, all your changes will be lost. Delete action is disabled globally.'|trans|raw }}
    </twig:ea:Alert>
    {{ parent() }}
{% endblock %}

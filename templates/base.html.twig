<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Personal Accountant{% endblock %}</title>
        <meta name="description" content="App to keep all balances and transactions organized">
        {% block head_meta %}
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <meta name="theme-color" content="#ffffff">
        {% endblock %}

        {% block head_favicon %}
            <link rel="icon" href="{{ asset('favicon.ico') }}" sizes="48x48">
            <link rel="icon" href="{{ asset('favicon.svg') }}" sizes="any" type="image/svg+xml">
            <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon-180x180.png') }}">
            <link rel="manifest" href="{{ asset('manifest.webmanifest') }}">
        {% endblock %}

        {% block head_og %}
            <meta property="og:title" content="Personal Accountant"/>
            <meta property="og:type" content="website"/>
            <meta property="og:site_name" content="Personal Accountant"/>
            <meta property="og:description" content="App to keep all balances and transactions organized"/>
            <meta property="og:url" content="{{ absolute_url('/') }}"/>
            <meta property="og:image" content="{{ absolute_url('og.jpg') }}"/>
            <meta property="og:image:type" content="image/jpeg"/>
            <meta property="og:image:height" content="200"/>
            <meta property="og:image:width" content="200"/>
        {% endblock %}

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>

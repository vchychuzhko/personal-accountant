{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{# @var field \EasyCorp\Bundle\EasyAdminBundle\Dto\FieldDto #}
{# @var entity \EasyCorp\Bundle\EasyAdminBundle\Dto\EntityDto #}
{% if (ea.crud.currentAction == 'index') or (field.value is empty) %}
    <span>{{ field.value | length }} income(s)</span>
{% else %}
    <a href="{{ ea_url()
        .setController('App\\Controller\\Admin\\IncomeCrudController')
        .setAction('index')
        .set('filters[balance][value]', entity.primaryKeyValue)
        .set('filters[balance][comparison]', '=')
        .unset('entityId')
    }}">
        {{ field.value | length }} income(s)
    </a>
{% endif %}

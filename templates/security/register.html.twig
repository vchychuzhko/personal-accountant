{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('app.css', 'easyadmin.assets.package') }}">
    <style>
        body {
            align-items: center;
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            margin: 0;
        }
        .form-register {
            max-width: 320px;
            text-align: center;
            width: 100%;
        }
        .form-register input {
            position: relative;
        }
        .form-register input[name="username"] {
            border-bottom-left-radius: 0;
            border-bottom-right-radius: 0;
            margin-bottom: -1px;
        }
        .form-register input[name="password"] {
            border-radius: 0;
            margin-bottom: -1px;
        }
        .form-register input[name="password_confirm"] {
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }
        .form-register input:focus {
            z-index: 1;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="form-register">
        <img class="mb-3" src="{{ asset('favicon.svg') }}" alt="Personal Accountant" width="72" height="72">
        <h1 class="mb-3">Create Account</h1>

        {% if not registration_open %}
            <p class="text-danger">Registration is currently closed.</p>
        {% else %}
            {% if error %}
                <p class="text-danger">{{ error }}</p>
            {% endif %}

            <form action="{{ path('app_register') }}" method="post">
                <label class="sr-only" for="username">Username</label>
                <input class="form-control w-100 py-2" type="text" id="username" name="username" placeholder="Username" value="{{ last_username }}" required autofocus>

                <label class="sr-only" for="password">Password</label>
                <input class="form-control w-100 py-2" type="password" id="password" name="password" placeholder="Password" required>

                <label class="sr-only" for="password_confirm">Confirm Password</label>
                <input class="form-control w-100 py-2" type="password" id="password_confirm" name="password_confirm" placeholder="Confirm Password" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('register') }}">

                <button class="btn btn-primary w-100 mt-3 py-4 fs-5 justify-content-center">Register</button>
            </form>
        {% endif %}

        <p class="mt-4 mb-3">
            <a
                class="text-decoration-underline link-primary link-underline-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
                href="{{ path('app_login') }}"
            >Back to Login</a>
        </p>

        <p class="mt-3 mb-3 text-muted">
            <a
                class="text-decoration-underline link-primary link-underline-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
                href="https://github.com/vchychuzhko/personal-accountant"
                target="_blank"
            >View on GitHub</a>
            &copy; Vladyslav Chychuzhko
        </p>
    </div>
{% endblock %}
